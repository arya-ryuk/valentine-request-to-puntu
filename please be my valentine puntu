<body>
  <div class="gif-container">
    <img src="https://media3.giphy.com/media/v1.Y2lkPTc5MGI3NjExZWlvdTB3NW5jdnVjMHAxbnlhcGt6cHZtdnB4ZDV1MzZ5aTdpbGVvbSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/l49FwlgF9r0eICiXu/giphy.gif" alt="Valentine GIF">
  </div>
  <h1 id="question">Will you be my Valentine? ðŸ’–</h1>
  <div class="buttons">
    <button id="yesButton">Yes</button>
    <button id="noButton">No</button>
  </div>
  <div id="responseText"></div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const questionElement = document.getElementById('question');
      const yesButton = document.getElementById('yesButton');
      const noButton = document.getElementById('noButton');
      const gifContainer = document.querySelector('.gif-container');
      const responseText = document.getElementById('responseText');
      let noClicks = 0;

      // Array of responses for each "No" click
      const responses = [
        "Please accept it",
        "I really love you so much",
        "Why can't you accept my request?",
        "Don't you see love in me?",
        "Why being so stubborn? Just accept my request!",
        "I will buy you bouquet and chocolates, please!",
        "Pleaseeeeeeeee!",
        "Why being so jiddi? Just accept my love!",
        "You have to accept it, it's my dhamki!",
        "Fine, I'll make you accept it!"
      ];

      // Function to handle "Yes" button click
      yesButton.addEventListener('click', () => {
        questionElement.innerHTML = 'Thank you, I love you, Puntu! ðŸ’•';
        gifContainer.innerHTML = '<img src="https://media0.giphy.com/media/v1.Y2lkPTc5MGI3NjExdHk2bDQxZjI3Ym94bWY0b201NjlvbThlcTVhaXIwZDhsem8zZzdtayZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/AVDSRfk3vhR0bBmaoV/giphy.gif" alt="Celebration GIF">';
        yesButton.style.display = 'none';
        noButton.style.display = 'none';
        responseText.style.display = 'none';
      });

      // Function to handle "No" button click
      noButton.addEventListener('click', () => {
        if (noClicks < responses.length) {
          responseText.textContent = responses[noClicks]; // Update response text
          noClicks++;
        }

        if (noClicks >= 10) {
          noButton.style.display = 'none';
          yesButton.style.fontSize = '2em'; // Make "Yes" button larger
          yesButton.click(); // Automatically trigger "Yes" action
        } else {
          // Shrink the "No" button
          const currentSize = parseFloat(window.getComputedStyle(noButton).fontSize);
          noButton.style.fontSize = `${currentSize * 0.9}px`;

          // Grow the "Yes" button
          const yesSize = parseFloat(window.getComputedStyle(yesButton).fontSize);
          yesButton.style.fontSize = `${yesSize * 1.1}px`;
        }
      });
    });
  </script>
</body>
</html>
